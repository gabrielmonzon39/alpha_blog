<h1 align="center">Create Category</h1>

<%= render 'shared/errors', obj:@category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |a| %>

<div class="form-group">
<div class="control-label col-sm-2">
    <%= a.label :name %>
</div>
<div class="col-sm-8">
    <%= a.text_field :name, class: "form-control", placeholder:"Category's name", autofocus: true %>
</div>
</div>

<div class="form-group">
<div class="col-sm-offset-2 col-sm-10">
    <%= a.submit "Create", class: 'btn btn-primary btn-lg'%>
</div>
</div>

<% end %>


