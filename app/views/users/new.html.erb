<h1 align="center">Wubba Lubba Dub Dub</h1>

<%= render 'shared/errors', obj:@user %>

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |a| %>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :user %>
  </div>
  <div class="col-sm-8">
    <%= a.text_field :user, class: "form-control", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :email %>
  </div>
  <div class="col-sm-8">
    <%= a.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :password %>
  </div>
  <div class="col-sm-8">
    <%= a.password_field :password, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= a.submit "Signup!", class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<% end %>

<%= link_to 'All articles', articles_path %>