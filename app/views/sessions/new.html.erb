<h1 align="center"> Log in </h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |a| %>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :email %>
  </div>
  <div class="col-sm-8">
    <%= a.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :password %>
  </div>
  <div class="col-sm-8">
    <%= a.password_field :password, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= a.submit "Log in", class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<% end %>

<%= link_to 'All articles', articles_path %>