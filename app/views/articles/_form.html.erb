<%= render 'shared/errors', obj:@article %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :title %>
  </div>
  <div class="col-sm-8">
    <%= a.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= a.label :description %>
  </div>
  <div class="col-sm-8">
    <%= a.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
      <%= a.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= a.submit class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<% end %>

<%= link_to 'All articles', articles_path %>